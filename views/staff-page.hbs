<!DOCTYPE html>
<html lang="en">

  	<head>
	
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/images/ossu-logo.png">

    <title>OSSU | Admin</title>

    <!-- CSS Files -->
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="/css/font-awesome.css">

    <link rel="stylesheet" href="/css/styles.css">

    <link rel="stylesheet" href="/css/owl-carousel.css">

    <link rel="stylesheet" href="/css/lightbox.css">

    <link rel="stylesheet" href="/css/order-style.css">

    </head>

    <body>
    
    <!-- ***** Header Area Start ***** -->
    {{> nav}}
    <!-- ***** Header Area End ***** -->
    
    <div id="top">
        <div class="container-fluid">
        </div>
    </div>

    <!-- Order Management Section -->
    <section class="section" id="header-fix-section">
        <div class="container">
            <div class="section-heading">
                <h6>Order Management</h6>
            </div>
            <br>
            {{#each result}}
            <div class="order">
                <h2>Order ID {{orderID}}</h2>
                <h4>{{orderType}}</h4>
                <h6>Payment Method: {{payment}}</h6>
                <h6 class="timestamp"> Placed on: {{this.timestamp}}</h6>
                <div class="table-responsive rounded-table">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Item Name</th>
                                <th scope="col">Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each items}}
                            <tr>
                                <td>{{food}}</td>
                                <td>{{quantity}}</td>
                            </tr>
                            {{/each}}
                            <tr>
                                {{#ifCond status 'Preparing'}}
                                    <td class="status"><span class="preparing">{{status}}</span></td>
                                {{/ifCond}}
                                {{#ifCond status 'Served'}}
                                    <td class="status"><span class="served">{{status}}</span></td>
                                {{/ifCond}}
                                <td>
                                    <button class="prepare-btn">Preparing</button>
                                    <button class="serve-btn">Served</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <button class="delete-btn">Delete</button>
                <hr>
            </div>
            {{/each}}
        </div>
    </section>
    <!-- Order Management Section End -->

    <!-- ***** Footer Start ***** -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-xs-12">
                    <div class="right-text-content">
                            <ul class="social-icons">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="logo">
                        <a href="#top"><img src="/images/ossu-logo-new.png" alt="" width="170px" height="55px"></a>
                    </div>
                </div>
                <div class="col-lg-4 col-xs-12">
                    <div class="left-text-content">
                        <p>Â© Copyright OSSU.
                        
                        <br>All Rights Reserved</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="/js/popper.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="/js/owl-carousel.js"></script>
    <script src="/js/accordions.js"></script>
    <script src="/js/datepicker.js"></script>
    <script src="/js/scrollreveal.min.js"></script>
    <script src="/js/waypoints.min.js"></script>
    <script src="/js/jquery.counterup.min.js"></script>
    <script src="/js/imgfix.min.js"></script> 
    <script src="/js/slick.js"></script> 
    <script src="/js/lightbox.js"></script> 
    <script src="/js/isotope.js"></script> 
    
    <!-- Global Init -->
    <script src="/js/staff-page.js"></script>
    <script src="/js/custom.js"></script>
    <script>

        $(function() {
            var selectedClass = "";
            $("p").click(function(){
            selectedClass = $(this).attr("data-rel");
            $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("."+selectedClass).fadeOut();
            setTimeout(function() {
              $("."+selectedClass).fadeIn();
              $("#portfolio").fadeTo(50, 1);
            }, 500);
                
            });
        });

    </script>
    
    </body>
</html>